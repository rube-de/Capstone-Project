<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ruf2.rube.fridgeorganizer.AddProductFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_fridge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/spinner_fridge" />
            <Button
                android:id="@+id/button_new_fridge_product_fragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/new_fridge"
                android:layout_gravity="center"
                android:onClick="clickNewFridge"/>
        </LinearLayout>
        <!--<TextView-->
            <!--android:layout_width="@dimen/text_view_add_product_label_width"-->
            <!--android:layout_height="@dimen/text_view_add_product_label_height"-->
            <!--android:text="Select Product Type"/>-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<Spinner-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:id="@+id/product_type_spinner" />-->
            <!--<Button-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:text="New Product Type"-->
                <!--android:layout_gravity="center"/>-->
        <!--</LinearLayout>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"/>
        <EditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="@dimen/edit_text_add_product_width"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="@dimen/text_view_add_product_label_width"
            android:layout_height="wrap_content"
            android:text="@string/product_amount"/>

        <EditText
            android:id="@+id/edit_text_product_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_date"/>
                <TextView
                    android:id="@+id/text_view_buy_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expiry_date"/>
                <TextView
                    android:id="@+id/text_view_expire_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select"/>

            </LinearLayout>

        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_add_product"
            android:text="@string/add_product"
            android:onClick="clickAddProduct"/>


    </LinearLayout>



</FrameLayout>
