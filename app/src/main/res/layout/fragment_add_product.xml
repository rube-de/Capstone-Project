<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ruf2.rube.fridgeorganizer.AddProductFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="@dimen/text_view_add_product_label_width"
            android:layout_height="@dimen/text_view_add_product_label_height"
            android:text="Select Fridge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/fridge_spinner" />
            <Button
                android:id="@+id/button_new_fridge_product_fragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Fridge"
                android:layout_gravity="center"/>
        </LinearLayout>
        <!--<TextView-->
            <!--android:layout_width="@dimen/text_view_add_product_label_width"-->
            <!--android:layout_height="@dimen/text_view_add_product_label_height"-->
            <!--android:text="Select Product Type"/>-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<Spinner-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:id="@+id/product_type_spinner" />-->
