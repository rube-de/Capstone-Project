<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ruf2.rube.fridgeorganizer.AddProductFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2" />
        </RelativeLayout>
        <TextView
            android:layout_width="@dimen/text_view_add_product_label_width"
            android:layout_height="@dimen/text_view_add_product_label_height"
            android:text="Add Prdouct"/>
        <EditText
            android:layout_width="@dimen/edit_text_add_product_width"
            android:layout_height="@dimen/edit_text_add_product_height" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="@dimen/text_view_add_product_label_height"
                    android:text="Buy Date"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_add_product_height" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="@dimen/text_view_add_product_label_height"
                    android:text="Expire Date"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_add_product_height" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>
